{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node16", 
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "esm": true, 
    "transpileOnly": true 
  },
  "include": ["src/scripts/**/*"],
  "exclude": ["node_modules"]
}